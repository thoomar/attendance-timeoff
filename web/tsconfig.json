{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "noEmit": true,
    "types": ["vite/client"],
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src", "vite.config.ts"]
}
