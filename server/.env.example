PORT=4000
POSTGRES_URL=postgres://app:app@127.0.0.1:5433/attendance
NODE_ENV=production

# Session
SESSION_SECRET=your-session-secret-here

# Email Configuration
# Set EMAIL_MODE to 'graph' for Microsoft Graph API or 'smtp' for traditional SMTP
EMAIL_MODE=graph
MAIL_FROM=noreply@republicfinancialservices.com
HR_EMAILS=hr@republicfinancialservices.com
APPROVER_EMAILS=manager1@company.com,manager2@company.com

# Microsoft Graph API (for EMAIL_MODE=graph)
# Required Azure AD App Registration permissions: Mail.Send (Application)
GRAPH_TENANT_ID=your-tenant-id
GRAPH_CLIENT_ID=your-client-id
GRAPH_CLIENT_SECRET=your-client-secret
GRAPH_SENDER_EMAIL=noreply@republicfinancialservices.com

# SMTP (for EMAIL_MODE=smtp)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@company.com
SMTP_PASS=your-password

# Azure AD / Entra ID (for OAuth login)
ENTRA_TENANT_ID=your-tenant-id
ENTRA_CLIENT_ID=your-client-id
ENTRA_CLIENT_SECRET=your-client-secret
ENTRA_REDIRECT_URI=https://timeoff.timesharehelpcenter.com/api/auth/callback
APP_BASE_URL=https://timeoff.timesharehelpcenter.com
